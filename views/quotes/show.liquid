{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <form action="/quotes" method="POST">
        <fieldset>
            <legend>Create A New Quote</legend>
            <label class="form-label">Name:</label>
            <input 
                class="form-control" 
                type="text" 
                name="name" 
                placeholder="enter name"
            >
            <label class="form-label"> Number:</label>
            <input 
                class="form-control" 
                type="text" 
                phone number="number" 
                placeholder="enter phone number"
            >
            <label class="form-label"> Brief Description Of Issue:</label>
            <input 
                class="form-control" 
                type="text" 
                Issue ="issue" 
                placeholder="Brief Description"
            >
            <label class="form-label">Type Of Device</label>
            <label>Select a Device</label>
                <select name="device" id="device">
                {% for device in devices %}
                <option value={{device._id}}>{{device.make}}                {{device.model}}</option>
                {% endfor %}
                </select>               
        </fieldset>

{% endblock%}