{% layout 'layout.liquid' %}

{% block content %}
<div>
    <h2 class="display-6">All Quotes</h2>
    <div class="row">

        {% for quote in quotes %}
            <div class="card" 
            style="width: 18rem">
                <h5 class="card-header">{{quote.name}}</h5>
                <div class="card-body">
                    <h6 class="card-title">{{quote.number}}</h5>
                    <!-- <h5 class="card-header">{{quote.name}}</h5> -->
                    
                    <!-- view button -->
                    <a href="/quotes/{{quote._id}}" class="btn btn-info">View {{quote.device.make.model}}</a>

                    <!-- edit button -->
                    <a href="/quotes/{{quote._id}}/edit" class="btn btn-info">Edit {{quote.device.make.model}}</a>

                    <a href="/quotes/delete{{quote._id}}" class="btn btn-info"> Delete {{quote.device.model}}</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}